{% from 'SyliusWebBundle:Frontend/Product:macros.html.twig' import sylius_display_price %}
<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <!-- single-product-start -->
    <div class="single-product">
        <div class="product-img">
            <a class="a-img" href="{{ path(product) }}"><img class="primary-img" {{ product.image ? product.image.path|imagine_filter('sylius_medium') : 'http://placehold.it/262x255' }}" alt="{{ product.name }}">
            </a>
            <div class="product-action">
                <div class="pro-rating">
                    <ul>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                </div>
                <div class="action-link">
                    <a href="#" data-toggle="tooltip" title="" data-original-title="Wishlist"><i class="fa fa-heart-o"></i>
                    </a>
                    <a href="#" data-toggle="tooltip" title="" data-original-title="Compare"><i class="fa fa-random"></i></a>
                    <a data-toggle="modal" data-target="#productModal" href="#" title="Quick view"><i class="fa fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="product-content">
            <h2><a href="#">{{ product.name|truncate(18) }}</a></h2>
            <div class="pro-price">
                <span class="normal-price">{{ sylius_display_price(product.masterVariant) }}</span>
                <span class="old-price"><del>Â£99.00</del></span>
            </div>
            <div class="product-cart">
                <button class="button" >{{ 'sylius.ui.add_to_cart'|trans }}</button>
            </div>
        </div>
    </div>
    <!-- single-product-end -->
</div>